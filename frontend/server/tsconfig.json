{
    "compilerOptions": {
        "strict": true,
        "skipLibCheck": true,
        "incremental": true,
        "target": "ES2022",
        "module": "CommonJS",
        "rootDir": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noUncheckedIndexedAccess": true,
        "noEmit": true,
        "outDir": "dist",
    },
}
